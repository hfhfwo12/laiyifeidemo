<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_menu"/>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f7f5f5">
        <RelativeLayout
            android:id="@+id/pager1_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/pager1_image"
                    android:src="@drawable/menu_top_right"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pager1_text"
                    android:text="首页"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/pager2_layout"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/pager2_image"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/menu_top_right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pager2_text"
                    android:layout_gravity="center_horizontal"
                    android:text="分类"
                    android:padding="5dp"
                    android:textColor="#000"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/pager3_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/pager3_image"
                    android:src="@drawable/menu_top_right"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pager3_text"
                    android:layout_gravity="center_horizontal"
                    android:text="全球尖货"
                    android:padding="5dp"
                    android:textColor="#000"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/pager4_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/pager4_image"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/menu_top_right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pager4_text"
                    android:layout_gravity="center_horizontal"
                    android:text="购物车"
                    android:padding="5dp"
                    android:textColor="#000"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/paper5_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/paper5_image"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/menu_top_right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/paper5_text"
                    android:layout_gravity="center_horizontal"
                    android:text="我的"
                    android:padding="5dp"
                    android:textColor="#000"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>